{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="card bg-light mb-3 mt-5" style="width: 800px">
        <div class="card-body">
          <div class="card-header mb-3">Create or Update User:</div>
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              <label>Name</label>
              {{ form_widget(form.name, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              <label>Username</label>
              {{ form_widget(form.username, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 mb-3">
              <label for="cars">Roles</label>
              <select class="form-control" id="roles">
                <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                <option value="ROLE_PAGE_1">ROLE_PAGE_1</option>
                <option value="ROLE_PAGE_1">ROLE_PAGE_2</option>
              </select>
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              <label>Password</label>
              {{ form_widget(form.password, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Register
              </button>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}


