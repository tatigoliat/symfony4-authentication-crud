{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}

<div class="container">
  <div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="card bg-light mb-3 mt-5" style="width: 800px">
        <div class="card-body">
          {% if (app.user.roles[0] is empty) %}
            <h1>Hello Admin</h1>
          {% elseif (app.user.roles[0] == "ROLE_PAGE_1") %}
            <h1>Hola {{ id }}</h1>
          {% elseif (app.user.roles[0] == "ROLE_PAGE_2") %}
            <h1>Hola {{ id }}</h1>
          {% endif %}
          <td>{{ app.user.roles[0] }}</td>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}